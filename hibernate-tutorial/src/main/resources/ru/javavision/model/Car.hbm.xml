<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="ru.javavision.model.Car" table="cars">
        <id name ="id" column ="id">
        	<generator class ="identity"/>
        </id>
        <property name="mark" column="mark"/>
        <property name="cost" column="cost"/>
        
        <set name ="engines" table="cars_engines" inverse ="true">
        	<key>
        		<column name="car_id" not-null="true" />
        	</key>
    		<many-to-many class="ru.javavision.model.Engine">
    			<column name="engine_id" not-null="true"/>
    		</many-to-many>
        </set>
    </class>
</hibernate-mapping>